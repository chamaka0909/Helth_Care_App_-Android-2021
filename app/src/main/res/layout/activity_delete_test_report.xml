<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delete_Test_Report">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Covid Test Report"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>



    <EditText
        android:id="@+id/delptid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:background="@drawable/edit_background"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:hint="@string/ptid"/>




    <Button
        android:id="@+id/deletedataBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:text="Delete"
        android:textSize="18dp"
        android:background="@drawable/edit_background"
        android:drawableLeft="@drawable/ic_baseline_delete_forever_24"
        android:textAllCaps="false"
        android:drawableTint="@color/white"/>






    </LinearLayout>
</ScrollView>

