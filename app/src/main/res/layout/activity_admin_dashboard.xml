<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="20dp"
android:background="#ffff"
tools:context=".Admin_Dashboard">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="25dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/adminadd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue1"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Test Result"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:maxHeight="100dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_baseline_post_add_24"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/adminupdate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue1"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Test Result"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:maxHeight="100dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_baseline_edit_24"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/admindelete"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue1"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Test Result"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:maxHeight="100dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_baseline_delete_24"/>


    </androidx.cardview.widget.CardView>



</LinearLayout>




</LinearLayout>